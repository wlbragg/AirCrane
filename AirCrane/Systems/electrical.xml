    <filter>
        <name>Environment Temperature Source</name>
        <type>gain</type>
        <input>
            <condition>
                <equals>
                    <property>/controls/thermometer/temp-mode</property>
                    <value>1</value>
                </equals>
            </condition>
            <property>/environment/temperature-degc</property>
        </input>
        <input>
            <condition>
                <equals>
                    <property>/controls/thermometer/temp-mode</property>
                    <value>0</value>
                </equals>
            </condition>
            <property>/environment/temperature-degc</property>
        </input>
        <output>
            <property>sim/model/aircrane/environment/air-temperature</property>
        </output>
