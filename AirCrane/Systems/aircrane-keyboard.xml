<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <keyboard>
    
    <key n="100">
      <name>d</name>
      <desc>Crew door</desc>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </key>
    
    <key n="68">
      <name>D</name>
      <desc>Passenger door</desc>
      <binding>
        <command>nasal</command>
        <script>doors.passenger.toggle();</script>
      </binding>
    </key>
    
    <key n="4">
      <name>Ctrl-d</name>
      <desc>Toggle SAS enable</desc>
      <binding>
        <command>nasal</command>
        <script>fcs.sas.toggleEnable();</script>
      </binding>
    </key>
    
    <key n="5">
      <name>Ctrl-e</name>
      <desc>Toggle CAS enable</desc>
      <binding>
        <command>nasal</command>
        <script>fcs.cas.toggleEnable();</script>
      </binding>
    </key>
    
    <key n="6">
      <name>Ctrl-f</name>
      <desc>Toggle AutoHover</desc>
      <binding>
        <command>nasal</command>
        <script>fcs.afcs.toggleAutoHover();</script>
      </binding>
    </key>
    
    <key n="82">
      <name>R</name>
      <desc>Toggle rotor brake</desc>
      <binding>
        <command>nasal</command>
        <script>
          var p = "/controls/rotor/brake";
          setprop(p, !getprop(p));
        </script>
      </binding>
    </key>
    
    <key n="114">
      <name>r</name>
      <desc>Apply rotor brake</desc>
      <binding>
        <command>nasal</command>
        <script>interpolate("/controls/rotor/brake", 1.0, 2)</script>
      </binding>
      <mod-up>
        <binding>
          <command>nasal</command>
          <script>interpolate("/controls/rotor/brake", 0.0, 2)</script>
        </binding>
      </mod-up>
    </key>
    
    <key n="125">
      <name>}</name>
      <desc>Start Engines</desc>
      <binding>
        <command>nasal</command>
        <script>aircrane.engines(1)</script>
      </binding>
    </key>
    
    <key n="123">
      <name>{</name>
      <desc>Shutdown Engines</desc>
      <binding>
        <command>nasal</command>
        <script>aircrane.engines(0)</script>
      </binding>
    </key>
    
    <key n="106">
      <name>j</name>
      <desc>Arm and Deploy SeaWater Snorkel</desc>
      <binding>
        <command>nasal</command>
        <script>
          if (getprop("sim/model/firetank/deployramscoop/position-norm") == 0)
          {
            if (getprop("/sim/model/firetank/flexhose/hosehitsground"))
              screen.log.write("Damage will occur if SeaSnorkel is deployed this low!");
            else {
              setprop("sim/model/firetank/arm", 1);
              doors.ramscoop.toggle();
            }
          }
          else {
            if (getprop("sim/model/firetank/deployflexhose/position-norm") == 1)
              setprop("sim/model/firetank/arm", 0);
            doors.ramscoop.toggle();
          }
        </script>
      </binding>
    </key>
    
    <key n="74">
      <name>J</name>
      <desc>Arm and Deploy Snorkel</desc>
      <binding>
        <command>nasal</command>
        <script>
          if (getprop("sim/model/firetank/deployflexhose/position-norm") == 1)
          {
            if (getprop("/sim/model/firetank/flexhose/hosehitsground"))
              screen.log.write("Damage will occur if Snorkel is deployed this low!");
            else {
              setprop("sim/model/firetank/arm", 1);
              doors.flexhose.toggle();
            }
          }
          else
            screen.log.write("Hose already deployed!");
        </script>
      </binding>
    </key>
    
    <key n="107">
      <name>k</name>
      <desc>Open Cannon Valve</desc>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/firetank/opencannonvalve</property>
      </binding>
    </key>
    
    <key n="75">
      <name>K</name>
      <desc>Open Tank Doors</desc>
      <binding>
        <command>nasal</command>
        <script>
          if (!getprop("sim/model/firetank/opentankdoors"))
            {
              if (getprop("sim/model/firetank/quantity") > 0)
                {
                  setprop("sim/model/firetank/opentankdoors", 1);
                }
              else
                screen.log.write("Quantity set to safe!");
            }
          else
             setprop("sim/model/firetank/opentankdoors", 0);
        </script>
      </binding>
    </key>

    <key n="15">
      <name>Ctrl-O</name>
      <desc>Auto Attach Cargo</desc>
      <binding>
        <command>property-toggle</command>
        <property>/sim/cargo/cargo-auto-hook</property>
      </binding>
    </key>

    <key n="79">
      <name>O</name>
      <desc>Attach Cargo</desc>
      <binding>
        <command>property-assign</command>
        <property>sim/cargo/cargo-hook</property>
        <value type="bool">true</value>
      </binding>
    </key>

    <key n="111">
      <name>o</name>
      <desc>Release Cargo</desc>
      <binding>
        <command>property-assign</command>
        <property>controls/cargo-release</property>
        <value type="bool">true</value>
      </binding>
    </key>

    <key n="87"> 
      <name>W</name>
      <desc>Winch down</desc>
      <repeatable type="bool">true</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          var connector = getprop("/sim/gui/dialogs/aicargo-dialog/connector");
          if (connector == 1)
            {
              var segments = getprop("/sim/cargo/rope/segments-reeled-in");
              if (segments > 0)
                setprop("/sim/cargo/rope/segments-reeled-in", segments - 1);
            }
          else
            screen.log.write("Winch required!");
        </script>
      </binding>
    </key>

    <key n="119"> 
      <name>w</name>
      <desc>Winch up</desc>
      <repeatable type="bool">true</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          var connector = getprop("/sim/gui/dialogs/aicargo-dialog/connector");
          if (connector == 1)
            {
              var segments = getprop("/sim/cargo/rope/segments-reeled-in");
              if (87 > segments)
                setprop("/sim/cargo/rope/segments-reeled-in", segments + 1);
            }
          else
            screen.log.write("Winch required!");
        </script>
      </binding>
      </key>

  </keyboard>
  
</PropertyList>
