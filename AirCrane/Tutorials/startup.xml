<?xml version="1.0"?>

<PropertyList>

    <name>Startup Procedure</name>

    <description>
This tutorial will teach you how to configure the AirCrane for Turbine Start and to Ready to Fly Configuration.
    </description>

    <audio-dir>Tutorials/startup</audio-dir>
    <timeofday>morning</timeofday>
