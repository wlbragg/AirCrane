            <value>0</value>
        </set>
		<set>
            <property>/controls/engines/engine[0]/throttle</property>
            <value>1</value>
        </set>
		<set>
            <property>/controls/engines/engine[1]/throttle</property>
            <value>1</value>
        </set>
        <set>
            <property>/controls/switches/ignition-1</property>
            <value>0</value>
        </set>
		<set>
            <property>/controls/switches/ignition-2</property>
            <value>0</value>
        </set>
		<set>
            <property>/controls/electric/engine[0]/generator-sw</property>
            <value>0</value>
        </set>
		<set>
            <property>/controls/electric/engine[1]/generator-sw</property>
            <value>0</value>
        </set>
		<set>
            <property>/controls/switches/app-master</property>
            <value>0</value>
        </set>
		<set>
            <property>/controls/switches/app-fuel</property>
            <value>0</value>
        </set>
		<set>
            <property>/controls/switches/app-start-20</property>
            <value>0</value>
        </set>
		<set>
            <property>/consumables/fuel/shutoff/lever/left</property>
            <value>0</value>
        </set>
		<set>
            <property>/consumables/fuel/shutoff/lever/right</property>
            <value>0</value>
        </set>
		<set>
            <property>/controls/switches/fuelpump1eng1</property>
            <value>0</value>
        </set>
		<set>
            <property>/controls/switches/fuelpump2eng1</property>
            <value>0</value>
        </set>
		<set>
            <property>/controls/switches/fuelpump1eng2</property>
            <value>0</value>
        </set>
		<set>
            <property>/controls/switches/fuelpump2eng2</property>
            <value>0</value>
        </set>
		<set>
            <property>/controls/switches/afcs</property>
            <value>0</value>
        </set>
		<set>
            <property>/controls/switches/afcs-servo</property>
            <value>0</value>
        </set>
        <set>
            <property>/instrumentation/adf/frequencies/selected-khz</property>
            <value>332</value> <!-- PAHOA NDB -->
        </set>
        <set>
            <property>/environment/weather-scenario</property>
            <value>Fair weather</value>
        </set>
        <set>
            <property>/consumables/fuel/tank[0]/selected</property>
            <value>true</value>
        </set>
        <set>
            <property>/consumables/fuel/tank[1]/selected</property>
            <value>true</value>
        </set>
		<set>
            <property>/consumables/fuel/tank[2]/selected</property>
            <value>true</value>
        </set>
		<set>
            <property>/consumables/fuel/tank[3]/selected</property>
            <value>true</value>
        </set>
		<set>
            <property>/consumables/fuel/tank[4]/selected</property>
            <value>true</value>
        </set>
        <set>
            <property>/controls/electric/battery-bus-switch</property>
            <value>false</value>
        </set>
        <set>
            <property>controls/lighting/beaconfwd-light-switch</property>
            <value>false</value>
        </set>
        <set>
            <property>controls/lighting/beaconaft-light-switch</property>
            <value>false</value>
        </set>
        <set>
            <property>controls/lighting/nav-light-switch</property>
            <value>false</value>
        </set>
        <set>
            <property>controls/lighting/strobe-light-switch</property>
            <value>false</value>
        </set>
        <set>
            <property>controls/lighting/landing-light-switch</property>
            <value>false</value>
        </set>
        <set>
            <property>controls/lighting/spot-light-switch</property>
            <value>false</value>
        </set>
        <set>
            <property>controls/lighting/luminosite-lights</property>
            <value>0</value>
        </set>
        <set>
            <property>/sim/model/door-positions/crew/position-norm</property>
            <value>0</value>
        </set>
        <set>
            <property>/sim/model/door-positions/starboard/position-norm</property>
            <value>0</value>
        </set>
        <set>
            <property>/controls/engines/active-engine</property>
            <value>0</value>
        </set>
        <message>After finishing the Preflight Inspection you're now ready to learn how to start the turbines.</message>
        <view>
            <heading-offset-deg>354.8</heading-offset-deg>
            <pitch-offset-deg>-5.6</pitch-offset-deg>
            <roll-offset-deg>0.0</roll-offset-deg>
            <x-offset-m>0.528</x-offset-m>
            <y-offset-m>-0.891</y-offset-m>
            <z-offset-m>-8.509</z-offset-m>
            <field-of-view>100</field-of-view>
        </view>
        <wait>7</wait>
    </step>

    <step>
        <message>Make sure the Parking Brake is set.</message>
        <view>
            <heading-offset-deg>85.175</heading-offset-deg>
            <pitch-offset-deg>-54.433</pitch-offset-deg>
            <roll-offset-deg>0.0</roll-offset-deg>
            <x-offset-m>0.528</x-offset-m>
            <y-offset-m>-0.891</y-offset-m>
            <z-offset-m>-8.509</z-offset-m>
            <field-of-view>55.167</field-of-view>
        </view>
        <!--marker>
            <x-m>-8.67945</x-m>
            <y-m>-0.190742</y-m>
            <z-m>-1.87349</z-m>
            <scale>3.4667</scale>
        </marker-->
        <error>
            <message>Set the Parking Brake.</message>
            <condition>
                <not>
                    <property>controls/gear/brake-parking</property>
                </not>
            </condition>
        </error>
        <exit>
            <condition>
                <property>controls/gear/brake-parking</property>
            </condition>
        </exit>
    </step>

