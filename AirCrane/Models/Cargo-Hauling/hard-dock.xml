<?xml version="1.0" encoding="ISO-8859-1"?>

<!--
  This is the Hard Docked portion of the cargo hauling capability.
  Any new cargo must be included here and organized like the current cargo is.
  It also needs to be defined in Cargo-Hauling/long-line.xml and aircrane_cargo.xml in the fgdata AI system.
-->

<PropertyList>

  <model>
    <path>shipping-container-big.ac</path>
    <name>shipping-container-big</name>
    <condition>
      <and>
        <or>
          <property>sim/model/cargo1-onhook</property>
          <property>sim/model/cargo2-onhook</property>
          <property>sim/model/cargo3-onhook</property>
        </or>
        <not>
          <property>/sim/gui/dialogs/aicargo-dialog/rope</property>
        </not>
      </and>
    </condition>
    <offsets>
      <x-m>-2.5</x-m>
      <y-m>0</y-m>
      <z-m>-3.85</z-m>
      <pitch-deg>0</pitch-deg>
    </offsets>
  </model>

  <model>
    <path>cub-ground.ac</path>
    <name>cub-ground</name>
