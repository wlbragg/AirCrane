<?xml version="1.0" encoding="ISO-8859-1"?>

<!--
  This is the model injected into the scene for the cargo hauling capability.
  Any new cargo must be have a file like this one.
  It also needs to be defined in Cargo-Hauling/long-line.xml and in Cargo-Hauling/hard-docked.xml.
-->

<PropertyList>

  <model>
    <path>dump-truck.ac</path>
    <name>dump-truck</name>
    <condition>
      <and>
        <property>sim/cargo/enabled</property>
        <or>
          <not>
            <property>/sim/gui/dialogs/aicargo-dialog/connection</property>
          </not>
          <and>
            <property>/sim/gui/dialogs/aicargo-dialog/connection</property>
            <not>        
              <property>sim/cargo/cargo14-onhook</property>
            </not>
          </and>
        </or>
      </and>
    </condition>
  </model>

  <!--animation>
    <object-name>dump-truck</object-name>
    <enable-hot type="bool">false</enable-hot>
  </animation-->

</PropertyList>