<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>mainrotor.ac</path>

  <animation>
    <object-name>rotor</object-name>
    <object-name>assemble</object-name>
    <object-name>axeH</object-name>
    <object-name>axeV</object-name>
    <object-name>plateau</object-name>
    <object-name>pistons</object-name>
  </animation>

  <!-- Blades -->
  <model>
    <name>Blade1</name>
    <path>Aircraft/AirCrane/Models/MainRotor/blade1.xml</path>
  </model>

  <model>
    <name>Blade2</name>
    <path>Aircraft/AirCrane/Models/MainRotor/blade2.xml</path>
    <offsets>
      <heading-deg> 60 </heading-deg>
    </offsets>
  </model>

  <model>
    <name>Blade3</name>
    <path>Aircraft/AirCrane/Models/MainRotor/blade3.xml</path>
    <offsets>
      <heading-deg> 120 </heading-deg>
    </offsets>
  </model>

  <model>
    <name>Blade4</name>
    <path>Aircraft/AirCrane/Models/MainRotor/blade4.xml</path>
    <offsets>
      <heading-deg> 180 </heading-deg>
    </offsets>
  </model>

  <model>
    <name>Blade5</name>
    <path>Aircraft/AirCrane/Models/MainRotor/blade5.xml</path>
    <offsets>
      <heading-deg> 240 </heading-deg>
    </offsets>
  </model>

  <model>
    <name>Blade6</name>
    <path>Aircraft/AirCrane/Models/MainRotor/blade6.xml</path>
    <offsets>
      <heading-deg> 300 </heading-deg>
    </offsets>
  </model>

  <animation>
    <name>touteslespales</name>
    <object-name>Blade1</object-name>
    <object-name>Blade2</object-name>
    <object-name>Blade3</object-name>
    <object-name>Blade4</object-name>
    <object-name>Blade5</object-name>
    <object-name>Blade6</object-name>
  </animation>

  <!-- Rotation du rotor 
  <animation>
    <type>rotate</type>
    <object-name>touteslespales</object-name>
    <property>rotors/main/roll-deg</property>
    <factor>0.7</factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>touteslespales</object-name>
    <property>rotors/main/yaw-deg</property>
    <factor>0.7</factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  -->

  <animation>
    <name>rotorcomplet</name>
    <object-name>rotor</object-name>
    <object-name>assemble</object-name>
    <object-name>plateau</object-name>
    <object-name>pistons</object-name>
    <object-name>axeH</object-name>
    <object-name>axeV</object-name>
    <object-name>Blade1</object-name>
    <object-name>Blade2</object-name>
    <object-name>Blade3</object-name>
    <object-name>Blade4</object-name>
    <object-name>Blade5</object-name>
    <object-name>Blade6</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>rotorcomplet</object-name>
    <property>rotors/main/blade[0]/position-deg</property>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

</PropertyList>
