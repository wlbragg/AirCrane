<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>cableguard.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>cableguardbottom</object-name>
    <object-name>cableguardtop</object-name>
    <object-name>cableguardmount</object-name>
  </animation>

  <effect>
    <inherits-from>Aircraft/AirCrane/Models/Effects/Exterior/exterior</inherits-from>
    <object-name>cableguardmount</object-name>
    <object-name>cableguardbottom</object-name>
    <object-name>cableguardtop</object-name>
  </effect>

  <animation>
    <type>select</type>
    <object-name>cabelguardmount</object-name>
    <object-name>cableguardbottom</object-name>
    <object-name>cableguardtop</object-name>
    <condition>
      <property>sim/model/cableguard/enabled</property>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>cableguardbottom</object-name>
    <object-name>cableguardtop</object-name>
    <property>orientation/pitch-deg</property>
    <factor> -1 </factor>
    <center>
      <x-m> -0.02191 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.13729 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>cableguardbottom</object-name>
    <property>orientation/roll-deg</property>
    <factor> 1 </factor>
    <center>
      <x-m> -0.02216 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -1.39545 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
