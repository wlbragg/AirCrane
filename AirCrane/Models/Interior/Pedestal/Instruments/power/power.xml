      <z-m>  0.00687 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>gen-1</object-name>
    <property>controls/electric/engine[0]/generator-sw</property>
    <factor>30</factor>
    <offset-deg>-10</offset-deg>
    <center>
      <x-m>  0.02602 </x-m>
      <y-m> -0.02747 </y-m>
      <z-m>  0.00687 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
    <action>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/electric/engine[0]/generator-sw</property>
        <factor>1</factor>
        <min>-1</min>
        <max> 1</max>
        <wrap>0</wrap>
      </binding>
      <binding>
        <command>nasal</command>
