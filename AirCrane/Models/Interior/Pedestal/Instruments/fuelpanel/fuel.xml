  </effect>

  <!-- Eng 1 Fuel Heater "Switch" -->
  <animation>
    <type>knob</type>
    <object-name>fuelheatereng1</object-name>
    <property>/controls/fuel/fuelheatereng1</property>
    <factor>-45</factor>
    <offset-deg>20</offset-deg>
    <center>
      <x-m> -0.05602 </x-m>
      <y-m> -0.04565 </y-m>
      <z-m>  0.00629 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>/controls/fuel/fuelheatereng1</property>
        <factor>1</factor>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
      <binding>
        <command>nasal</command>
        <script>aircrane.click("avionics")</script>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>fuelheatereng1</tooltip-id>
        <label>Eng 1 Fuel Heat: %s</label>
        <property>/controls/fuel/fuelheatereng1</property>
        <mapping>nasal</mapping>
        <script>
          var modes = ['Off', 'On'];
          return modes[arg[0]];
        </script>
      </binding>
    </hovered>
  </animation>

