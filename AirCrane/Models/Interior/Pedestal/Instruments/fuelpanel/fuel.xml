    <object-name>fuelpump1eng2</object-name>
    <object-name>fuelpump2eng2</object-name>
  </animation>

  <effect>
    <inherits-from>Aircraft/AirCrane/Models/Effects/Interior/cockpit-interior</inherits-from>
