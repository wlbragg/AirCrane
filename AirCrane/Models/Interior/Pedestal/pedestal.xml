      <z-m> -0.31608 </z-m>
      <pitch-deg> 8 </pitch-deg>
    </offsets>
  </model>

  <!-- rotor brake panel -->
  <model>
    <path>Aircraft/AirCrane/Models/Interior/Pedestal/Instruments/RotorBrake/rotorbrake.xml</path>
    <offsets>
      <x-m>  0.54908 </x-m>
      <y-m>  0.07731 </y-m>
      <z-m> -0.30826 </z-m>
      <pitch-deg> 8 </pitch-deg>
    </offsets>
  </model>

  <!-- brake and wheel lock pedestal extention -->
  <model>
    <path>Aircraft/AirCrane/Models/Interior/Pedestal/Instruments/extention/extention.xml</path>
    <offsets>
      <x-m>  0.69 </x-m>
      <y-m> -0.11  </y-m>
      <z-m> -0.37271 </z-m>
      <pitch-deg> 8 </pitch-deg>
    </offsets>
  </model>

</PropertyList>
