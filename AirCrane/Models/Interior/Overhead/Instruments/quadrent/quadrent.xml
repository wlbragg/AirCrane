    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>FuelShutoff</tooltip-id>
        <label>Fuel Shutoff Engine 2: %s</label>
        <property>/consumables/fuel/shutoff/lever/right</property>
        <mapping>on-off</mapping>
      </binding>
    </hovered>
  </animation>

  <!-- N1 Engine 1 -->
  <animation>
    <type>knob</type>
    <object-name>n1leverl</object-name>
    <object-name>n1leverlplastic</object-name>
    <property>/engines/one/n1</property>
    <factor>80</factor>
    <center>
      <x-m>  0.01717 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.01691 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
    <action>
      <repeatable>false</repeatable>
      <!--
      condition>
        <not>
          <property>/engines/one/n1-indent</property>
        </not>
      </condition>
      -->
      <binding>
        <command>property-adjust</command>
        <property>/engines/one/n1</property>
        <factor>.05</factor>
        <min>0</min>
        <max>.5</max>
        <wrap>0</wrap>
      </binding>
      <binding>
        <command>nasal</command>
        <script>
          var n1_state = getprop("/engines/one/n1");
          if (n1_state == .15) setprop("/engines/one/n1-indent", 1);
          if (!n1_state) setprop("/consumables/fuel/shutoff/lever/left", 0);
          aircrane.click("avionics");
        </script>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>eng1-n1</tooltip-id>
        <label>Engine 1 N1:  %3d</label>
        <mapping>percent</mapping>
        <property>engines/one/n1</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>n1leverlstart</object-name>
    <property>/engines/one/n1</property>
    <factor>80</factor>
    <center>
      <x-m>  0.01717 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.01691 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
