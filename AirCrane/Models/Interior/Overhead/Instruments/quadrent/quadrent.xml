<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>quadrent.ac</path>

  <effect>
    <inherits-from>Aircraft/AirCrane/Models/Effects/Interior/lm-interior-quadrent</inherits-from>
    <object-name>controlquadrant</object-name>
    <object-name>controlquadrantplates</object-name>
    <object-name>wire</object-name>
    <object-name>n1leverlstart</object-name>
    <object-name>n1leverrstart</object-name>
    <object-name>cqscrews</object-name>
    <object-name>redonl</object-name>
    <object-name>redoffl</object-name>
    <object-name>redonr</object-name>
    <object-name>redoffr</object-name>
    <object-name>fuelshutoffl</object-name>
    <object-name>fuelshutoffr</object-name>
    <object-name>n1leverl</object-name>
    <object-name>n1leverr</object-name>
    <object-name>fire</object-name>
    <object-name>redbase</object-name>
  </effect>

  <effect>
    <inherits-from>Aircraft/AirCrane/Models/Effects/Interior/interior-glass-reflection-panel-front</inherits-from>
    <object-name>n1leverlplastic</object-name>
    <object-name>n1leverrplastic</object-name>
  </effect>

  <animation>
    <type>select</type>
    <object-name>redoffl</object-name>
    <condition>
      <equals>
        <property>/sim/model/lightmap/eng1-underspeed/factor</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>redonl</object-name>
    <condition>
      <equals>
        <property>sim/model/lightmap/eng1-underspeed/factor</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>redoffr</object-name>
    <condition>
      <equals>
        <property>sim/model/lightmap/eng2-underspeed/factor</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>redonr</object-name>
    <condition>
      <equals>
        <property>sim/model/lightmap/eng2-underspeed/factor</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>redonl</object-name>
    <emission>
      <factor-prop>sim/model/lightmap/eng1-underspeed/factor</factor-prop>
      <red>   0.7 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>redonr</object-name>
    <emission>
      <factor-prop>sim/model/lightmap/eng2-underspeed/factor</factor-prop>
      <red>   0.7 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>

  <model>
    <name>low-turbine-pwr-quad-eng1</name>
    <path>Aircraft/AirCrane/Models/Effects/Interior/procedural_light_indicator_red.xml</path>
    <offsets>
        <x-m> 0.025062</x-m>
        <y-m>-0.147786</y-m>
        <z-m> 0.057731</z-m>
    </offsets>
    <condition>
        <property>sim/model/lightmap/eng1-underspeed/factor</property>
    </condition>
  </model>

  <model>
    <name>low-turbine-pwr-quad-eng2</name>
    <path>Aircraft/AirCrane/Models/Effects/Interior/procedural_light_indicator_red.xml</path>
    <offsets>
        <x-m> 0.026894</x-m>
        <y-m> 0.149898</y-m>
        <z-m> 0.056639</z-m>
    </offsets>
    <condition>
        <property>sim/model/lightmap/eng2-underspeed/factor</property>
    </condition>
  </model>

  <animation>
    <type>knob</type>
    <object-name>fuelshutoffl</object-name>
    <property>/consumables/fuel/shutoff/lever/left</property>
    <factor>40</factor>
    <center>
      <x-m>  0.01717 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.01691 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
    <action>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/consumables/fuel/shutoff/lever/left</property>
        <factor>1</factor>
        <min>0</min>
        <max>1</max>
        <wrap>0</wrap>
      </binding>
      <binding>
        <command>nasal</command>
        <script>aircrane.click("avionics")</script>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>FuelShutoff</tooltip-id>
        <label>Fuel Shutoff Engine 1: %s</label>
        <property>/consumables/fuel/shutoff/lever/left</property>
        <mapping>on-off</mapping>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>fuelshutoffr</object-name>
    <property>/consumables/fuel/shutoff/lever/right</property>
    <factor>40</factor>
    <center>
      <x-m>  0.01717 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m> -0.01691 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
    <action>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
