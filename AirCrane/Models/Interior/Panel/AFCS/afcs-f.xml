  <!-- Yaw Trim "Knob" -->
  <animation>
    <type>knob</type>
    <object-name>yawtrim</object-name>
    <property>controls/knobs/yaw-trim</property>
    <factor>-60</factor>
    <offset-deg>0</offset-deg>
    <axis>
        <x1-m>-9.11859</x1-m>
        <y1-m>-0.001792</y1-m>
        <z1-m>-1.76102</z1-m>
        <x2-m>-9.12024</x2-m>
        <y2-m>-0.001752</y2-m>
        <z2-m>-1.77306</z2-m>
    </axis>
    <action>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/knobs/yaw-trim</property>
          <factor>.01</factor>
          <min>-3</min>
          <max>3</max>
          <wrap>false</wrap>
      </binding>
      <binding>
        <command>nasal</command>
        <script>aircrane.click("avionics")</script>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>yawtrim</tooltip-id>
        <label>Yaw Trim: %s</label>
        <property>controls/knobs/yaw-trim</property>
      </binding>
    </hovered>
  </animation>

