<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>panelhoistctrl.ac</path>

  <!-- ALS Interior Shadows -->
  <effect>
    <inherits-from>Models/Effects/interior/cockpit-interior-shadows</inherits-from>
    <object-name>knobhoistcntrl</object-name>
    <object-name>basehoistcntrl</object-name>
    <object-name>emgshear</object-name>
    <object-name>emgshearcover</object-name>
    <object-name>hoistctrlpanel</object-name>
  </effect>

  <!-- Hoist Control "Knob" -->
  <animation>
    <type>knob</type>
    <object-name>knobhoistcntrl</object-name>
    <property>controls/hoist-control</property>
    <factor>-60</factor>
    <offset-deg>0</offset-deg>
    <axis>
            <x1-m>-8.94742</x1-m>
            <y1-m> 0.076516</y1-m>
            <z1-m>-1.79533</z1-m>
            <x2-m>-8.9472</x2-m>
            <y2-m> 0.076469</y2-m>
            <z2-m>-1.79369</z2-m>
        </axis>
    <action>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
          <property>controls/hoist-control</property>
        <factor>1</factor>
        <min>0</min>
        <max>3</max>
        <wrap>0</wrap>
      </binding>
      <binding>
        <command>nasal</command>
        <script>aircrane.click("avionics")</script>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>hoist-control</tooltip-id>
        <label>Hoist Control: %s</label>
        <property>controls/hoist-control</property>
        <mapping>nasal</mapping>
        <script>
          var modes = ['Off', 'Left Pilot', 'Right Pilot', 'Aft']; 
          return modes[arg[0]];
        </script>
      </binding>
    </hovered>
  </animation>

    <!-- Emergency Shear "Switch" -->
    <animation>
        <type>knob</type>
        <object-name>emgshear</object-name>
        <property>/controls/emgshear</property>
        <factor>-45</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>-8.89509</x-m>
            <y-m> 0.077312</y-m>
            <z-m>-1.80272</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/controls/emgshear</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>nasal</command>
                <script>aircrane.click("avionics")</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>emg-shear-sw-tch</tooltip-id>
                <label>Emergency Shear: %s</label>
                <property>/controls/emgshear</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['ARM', 'SHEAR'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

    <!-- Emergency Shear "Cover" -->
    <animation>
        <type>knob</type>
        <object-name>emgshearcover</object-name>
        <property>/controls/emgshearcover</property>
        <factor>-70</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>-8.90762</x-m>
            <y-m> 0.077118</y-m>
            <z-m>-1.80294</z-m>
        </center>
        <axis>
            <x> 0</x>
            <y> 1</y>
            <z> 0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>/controls/emgshearcover</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>nasal</command>
                <script>aircrane.click("cover")</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>emgshearcover</tooltip-id>
                <label>Emergancy Shear Cover</label>
                <property>/controls/emgshearcover</property>
            </binding>
        </hovered>
    </animation>

</PropertyList>
