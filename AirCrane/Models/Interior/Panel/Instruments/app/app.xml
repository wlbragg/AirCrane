    <effect>
      <inherits-from>Models/Effects/interior/interior-glass-reflection-panel-front</inherits-from>
      <object-name>glass</object-name>
      <object-name>glass2</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>appmaster</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>controls/switches/app-master</property>
            </binding>
            <binding>
                <command>nasal</command>
                <script>aircrane.click("avionics")</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>appmaster</tooltip-id>
                <label>APP Master: %s</label>
                <property>controls/switches/app-master</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['Off', 'On'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>appmaster</object-name>
        <property>controls/switches/app-master</property>
        <factor>30</factor>
        <offset-deg>-10</offset-deg>
        <axis>
          <x>0.0</x>
          <y>1.0</y>
          <z>0.0</z>
        </axis>
        <center>
          <x-m>-8.60012</x-m>
          <y-m>-0.047711</y-m>
          <z-m>-0.586285</z-m>
        </center>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>appstart</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
