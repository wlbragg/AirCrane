        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>appstart</tooltip-id>
                <label>APP Start: %s</label>
                <mapping>on-off</mapping>
                <property>controls/switches/app-start</property>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>appstart</object-name>
        <property>controls/switches/app-start</property>
        <factor>0.003</factor>
        <axis>
          <x>0.0</x>
          <y>0.0</y>
          <z>1.0</z>
        </axis>
    </animation>

