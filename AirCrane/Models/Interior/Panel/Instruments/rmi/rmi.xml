<PropertyList>

  <path>rmi.ac</path>

  <effect>
      <inherits-from>Models/Effects/interior/cockpit-interior-shadows</inherits-from>
      <object-name>Case</object-name>
      <object-name>fasteners</object-name>
  </effect>
  <effect>
      <inherits-from>Models/Effects/interior/cockpit-flashlight</inherits-from>
      <object-name>face-c</object-name>
      <object-name>face-p</object-name>
      <object-name>RMI.Needle1-c</object-name>
      <object-name>RMI.Needle2-c</object-name>
      <object-name>RMI.Needle1-p</object-name>
      <object-name>RMI.Needle2-p</object-name>
  </effect>
  <effect>
      <inherits-from>Models/Effects/interior/interior-glass-reflection-panel-front</inherits-from>
      <object-name>glass</object-name>
  </effect>

  <animation>
    <type>rotate</type>
    <object-name>face-p</object-name>
    <property>orientation/heading-magnetic-deg</property>
    <factor>1</factor>
    <axis>
        <x1-m>-9.38055</x1-m>
        <y1-m>-0.587603</y1-m> 
        <z1-m>-1.60247</z1-m>
        <x2-m>-9.37876</x2-m>
        <y2-m>-0.587602</y2-m>
        <z2-m>-1.60228</z2-m>
    </axis>
  </animation>

  <!-- Needle 1 VOR -->
  <animation>
    <type>rotate</type>
    <object-name>RMI.Needle1-p</object-name>
    <property>orientation/heading-deg</property>
    <axis>
        <x1-m>-9.38055</x1-m>
        <y1-m>-0.587603</y1-m> 
        <z1-m>-1.60247</z1-m>
        <x2-m>-9.37876</x2-m>
        <y2-m>-0.587602</y2-m>
        <z2-m>-1.60228</z2-m>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>RMI.Needle1-p</object-name>
    <property>instrumentation/nav[1]/heading-deg</property>
    <axis>
        <x1-m>-9.38055</x1-m>
        <y1-m>-0.587603</y1-m> 
        <z1-m>-1.60247</z1-m>
        <x2-m>-9.37876</x2-m>
        <y2-m>-0.587602</y2-m>
        <z2-m>-1.60228</z2-m>
    </axis>
  </animation> 

  <!-- Needle 2 ADF -->
  <animation>
    <type>rotate</type>
    <object-name>RMI.Needle2-p</object-name>
    <property>instrumentation/adf/indicated-bearing-deg</property>
    <axis>
        <x1-m>-9.38055</x1-m>
        <y1-m>-0.587603</y1-m> 
        <z1-m>-1.60247</z1-m>
        <x2-m>-9.37876</x2-m>
        <y2-m>-0.587602</y2-m>
        <z2-m>-1.60228</z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>face-c</object-name>
    <property>orientation/heading-magnetic-deg</property>
    <factor>1</factor>
    <axis>
        <x1-m>-9.38239</x1-m>
        <y1-m> 0.600693</y1-m> 
        <z1-m>-1.58606</z1-m>
        <x2-m>-9.37997</x2-m>
        <y2-m> 0.600694</y2-m>
        <z2-m>-1.5858</z2-m>
    </axis>
  </animation>

  <!-- Needle 1 VOR -->
  <animation>
    <type>rotate</type>
    <object-name>RMI.Needle1-c</object-name>
    <property>orientation/heading-deg</property>
    <axis>
        <x1-m>-9.38239</x1-m>
        <y1-m> 0.600693</y1-m> 
        <z1-m>-1.58606</z1-m>
        <x2-m>-9.37997</x2-m>
        <y2-m> 0.600694</y2-m>
        <z2-m>-1.5858</z2-m>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>RMI.Needle1-c</object-name>
    <property>instrumentation/nav[1]/heading-deg</property>
    <axis>
        <x1-m>-9.38239</x1-m>
        <y1-m> 0.600693</y1-m> 
        <z1-m>-1.58606</z1-m>
        <x2-m>-9.37997</x2-m>
        <y2-m> 0.600694</y2-m>
        <z2-m>-1.5858</z2-m>
    </axis>
  </animation> 

  <!-- Needle 2 ADF -->
  <animation>
    <type>rotate</type>
    <object-name>RMI.Needle2-c</object-name>
    <property>instrumentation/adf/indicated-bearing-deg</property>
    <axis>
        <x1-m>-9.38239</x1-m>
        <y1-m> 0.600693</y1-m> 
        <z1-m>-1.58606</z1-m>
        <x2-m>-9.37997</x2-m>
        <y2-m> 0.600694</y2-m>
        <z2-m>-1.5858</z2-m>
    </axis>
  </animation>

</PropertyList>

