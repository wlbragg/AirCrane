<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>vsi.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <effect>
    <inherits-from>Aircraft/AirCrane/Models/Effects/Interior/lm-interior-vsi-r</inherits-from>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>
  </effect>

  <effect>
    <inherits-from>Aircraft/AirCrane/Models/Effects/Interior/interior-glass-reflection-panel-front</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <!--animation>
    <type>material</type>
    <object-name>vitre</object-name>
	<diffuse>
		<red>0.1</red>
		<green>0.1</green>
		<blue>0.1</blue>
	</diffuse>
	<specular>
		<red>0.25</red>
		<green>0.25</green>
		<blue>0.25</blue>
	</specular>
	<transparency>
		<alpha-prop>/environment/aircraft-effects/panel-glass-reflection</alpha-prop>
		<factor>0.2</factor>
	</transparency>
  </animation-->

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <condition>
      <property>controls/electric/battery-bus-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
    <interpolation>
      <entry><ind> -2000 </ind><dep> -176 </dep></entry>
      <entry><ind> -1500 </ind><dep> -133 </dep></entry>
      <entry><ind> -1000 </ind><dep>  -88 </dep></entry>
      <entry><ind>  -500 </ind><dep>  -44 </dep></entry>
      <entry><ind>     0 </ind><dep>    0 </dep></entry>
      <entry><ind>   500 </ind><dep>   44 </dep></entry>
      <entry><ind>  1000 </ind><dep>   88 </dep></entry>
      <entry><ind>  1500 </ind><dep>  133 </dep></entry>
      <entry><ind>  2000 </ind><dep>  176 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
