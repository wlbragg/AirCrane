 <path>gdsi.ac</path>

  <effect>
      <inherits-from>Models/Effects/interior/cockpit-interior-shadows</inherits-from>
      <object-name>Cache</object-name>
      <object-name>Cadran</object-name>
      <object-name>Pointeur</object-name>
      <object-name>Case</object-name>
      <object-name>fasteners</object-name>
  </effect>
  <effect>
      <inherits-from>Models/Effects/interior/cockpit-flashlight</inherits-from>
      <object-name>IndicU</object-name>
      <object-name>IndicV</object-name>
  </effect>
  <effect>
      <inherits-from>Models/Effects/interior/interior-glass-reflection-panel-front</inherits-from>
      <object-name>glass</object-name>
  </effect>

  <animation>
	  <type>noshadow</type>
	  <object-name>PAR</object-name>
  </animation>

  <animation>
      <type>rotate</type>
      <object-name>IndicU</object-name>
      <property>instrumentation/gsdi/drift-u-kt</property>
      <interpolation>
          <entry>
              <ind>-50</ind>
              <dep>19</dep>
          </entry>
          <entry>
              <ind>-20</ind> <!--10/7.5-->
              <dep>15</dep>
          </entry>
          <entry>
              <ind>0</ind>
              <dep>0</dep>
          </entry>
          <entry>
              <ind>20</ind>
              <dep>-15</dep>
          </entry>
          <entry>
              <ind>50</ind>
              <dep>-19</dep>
          </entry>
      </interpolation>
      <axis>
            <x1-m>-9.3858</x1-m>
            <y1-m> 0.204605</y1-m> 
            <z1-m>-1.57141</z1-m>
            <x2-m>-9.38168</x2-m>
            <y2-m> 0.204599</y2-m>
            <z2-m>-1.57094</z2-m>
      </axis>
  </animation>

  <animation>
      <type>rotate</type>
      <object-name>IndicV</object-name>
      <property>instrumentation/gsdi/drift-v-kt</property>
      <interpolation>
          <entry>
              <ind>-50</ind>
              <dep>-19</dep>
          </entry>
          <entry>
              <ind>-20</ind>
              <dep>-15</dep>
          </entry>
          <entry>
              <ind>0</ind>
              <dep>0</dep>
          </entry>
          <entry>
              <ind>20</ind>
              <dep>15</dep>
          </entry>
          <entry>
              <ind>50</ind>
              <dep>19</dep>
          </entry>
      </interpolation>
      <axis>
            <x1-m>-9.3858</x1-m>
            <y1-m> 0.204605</y1-m> 
            <z1-m>-1.57141</z1-m>
            <x2-m>-9.38168</x2-m>
            <y2-m> 0.204599</y2-m>
            <z2-m>-1.57094</z2-m>
      </axis>
	</animation>

