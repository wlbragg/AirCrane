<?xml version="1.0"?>

<PropertyList>

 <path>omcp.ac</path>

     <effect>
        <inherits-from>Models/Effects/interior/cockpit-interior-shadows</inherits-from>
        <object-name>appstart20</object-name>
        <object-name>appfuel</object-name>
        <object-name>engchip</object-name>
        <object-name>omcppanel</object-name>
        <object-name>switchbase</object-name>

        <object-name>face</object-name>
        <object-name>marker</object-name>
        <object-name>bezelinside</object-name>
        <object-name>bezeloutside</object-name>
        <object-name>screws</object-name>

        <object-name>needle</object-name>
        <object-name>toggleswitch</object-name>
        <object-name>togglebase</object-name>
    </effect>

    <!--effect>
        <inherits-from>Models/Effects/interior/j3cub-flashlight</inherits-from>
        <object-name>needle</object-name>
        <object-name>toggle</object-name>
    </effect-->

    <effect>
        <inherits-from>Models/Effects/interior/interior-glass-reflection-panel-front</inherits-from>
        <object-name>glass</object-name>
    </effect>

    <!-- APP Start 20% "spring switch" -->
    <animation>
        <type>knob</type>
        <object-name>appstart20</object-name>
        <property>controls/switches/app-start-20</property>
        <factor>-35</factor>
        <offset-deg>-10</offset-deg>
        <center>
            <x-m>-8.64014</x-m>
            <y-m> 0.040212</y-m>
            <z-m>-0.588184</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-assign</command>
                <property>controls/switches/app-start-20</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/switches/app-start</property>
                <value>1</value>
            </binding>
          <!--binding>
              <command>property-adjust</command>
              <property>controls/switches/app-start-20</property>
              <factor>1</factor>
              <min>0</min>
              <max>1</max>
              <wrap>false</wrap>
          </binding>
          <binding>
              <command>property-adjust</command>
              <property>controls/switches/app-start</property>
              <factor>1</factor>
              <min>0</min>
              <max>1</max>
              <wrap>false</wrap>
          </binding-->
        </action>
        <release>
            <binding>
                <command>nasal</command>
                <script>
                    setprop("/controls/switches/app-start-20", 0);
                    aircrane.click("avionics");
                </script>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>controls/switches/app-start</property>
                <value>0</value>
            </binding>
        </release>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>appstart</tooltip-id>
                <label>APP Start 20: %s</label>
                <property>controls/switches/app-start-20</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['Off', 'On'];
                    return modes[arg[0]];
                </script>
                </binding>
        </hovered>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>appfuel</object-name>
        <property>controls/switches/app-fuel</property>
        <factor>-45</factor>
        <offset-deg>10</offset-deg>
        <center>
            <x-m>-8.64014</x-m>
            <y-m> 0.072843</y-m>
            <z-m>-0.588184</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/switches/app-fuel</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>nasal</command>
                <script>aircrane.click("avionics")</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>appfuel</tooltip-id>
                <label>APP Fuel: %s</label>
                <property>controls/switches/app-fuel</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['Main', 'Start'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>engchip</object-name>
        <property>controls/switches/engchip</property>
        <factor>-45</factor>
        <offset-deg>10</offset-deg>
        <center>
            <x-m>-8.69569</x-m>
            <y-m> 0.055237</y-m>
            <z-m>-0.591377</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/switches/engchip</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>nasal</command>
                <script>aircrane.click("avionics")</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>engchip</tooltip-id>
                <label>Engine Chip: %s</label>
                <property>controls/switches/engchip</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['Off', 'Test'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needle</object-name>
        <property>sim/model/aircrane/environment/air-temperature</property>
        <factor>1</factor>
        <interpolation>
            <entry>
                <ind>-60</ind>
                <dep>127</dep>
            </entry>
            <entry>
                <ind>-50</ind>
                <dep>104</dep>
            </entry>
            <entry>
                <ind>-40</ind>
                <dep>82.5</dep>
            </entry>
            <entry>
                <ind>-30</ind>
                <dep>61.5</dep>
            </entry>
            <entry>
                <ind>-20</ind>
                <dep>41</dep>
            </entry>
            <entry>
                <ind>-10</ind>
                <dep>20</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>10</ind>
                <dep>-21</dep>
            </entry>
            <entry>
                <ind>20</ind>
                <dep>-43</dep>
            </entry>
            <entry>
                <ind>30</ind>
                <dep>-64</dep>
            </entry>
            <entry>
                <ind>40</ind>
                <dep>-85</dep>
            </entry>
            <entry>
                <ind>50</ind>
                <dep>-106</dep>
            </entry>
            <entry>
                <ind>60</ind>
                <dep>-127</dep>
            </entry>
        </interpolation>
        <axis>
            <x1-m>-8.65818</x1-m>
            <y1-m> 0.132385</y1-m>
            <z1-m>-0.591143</z1-m>
            <x2-m>-8.65819</x2-m>
            <y2-m> 0.132333</y2-m>
            <z2-m>-0.590894</z2-m>
        </axis>
    </animation>

    <animation>
        <type>material</type>
        <object-name>mode</object-name>
        <emission>
            <red>  0.05</red>
            <green>1</green>
            <blue> 0.05</blue>
            <!--factor-prop alias="/params/light/power"/-->
            <factor>1</factor>
        </emission>
    </animation>
   <animation>
        <type>material</type>
        <object-name>face</object-name>
        <object-name>needle</object-name>
        <emission>
            <red>  0.05</red>
            <green>0.05</green>
            <blue> 0.05</blue>
            <!--factor-prop alias="/params/light/power"/-->
            <factor>1</factor>
        </emission>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>toggleswitch</object-name>
        <property>controls/thermometer/temp-mode</property>
        <factor>45</factor>
        <offset-deg>-20</offset-deg>
        <center>
            <x-m>-8.70591</x-m>
            <y-m> 0.1339</y-m>
            <z-m>-0.59154</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/thermometer/temp-mode</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>nasal</command>
                <script>aircrane.click("avionics")</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Temperature Mode</tooltip-id>
                <label>Position: %s</label>
                <property>controls/thermometer/temp-mode</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['Indoor', 'Outdoor'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>mode</object-name>
        <property>controls/thermometer/temp-mode/</property>
        <bias>0.0001</bias>
        <factor>.062</factor>
        <step>1</step>
        <axis>
            <x>0</x>
            <y>-1</y>
        </axis>
    </animation>
</PropertyList>


