  <animation>
    <type>select</type>
    <object-name>rotor-brake-on</object-name>
    <condition>
      <or>
		<and>
			<property>/systems/electrical/outputs/cws-rotor-brake-on</property>
			<greater-than>
				<property>/controls/rotor/brake</property>
				<value>.8</value>
			</greater-than>
		</and>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>rotor-brake-press</object-name>
    <condition>
      <or>
        <and>
			<property>/systems/electrical/outputs/cws-rotor-brake-on</property>
			<greater-than>
				<property>/controls/rotor/brake</property>
				<value>.10</value>
			</greater-than>
		</and>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>parking-brake-on</object-name>
    <condition>
      <or>
		<and>
			<property>systems/electrical/outputs/cws-power</property>
			<property>/controls/gear/brake-parking</property>
		</and>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>1-eng-anti-ice</object-name>
    <condition>
      <or>
        <property>/systems/fuel/temp-fwd-heat-low</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>2-eng-anti-ice</object-name>
    <condition>
      <or>
        <property>/systems/fuel/temp-aft-heat-low</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>fwd-fuel-low</object-name>
    <condition>
      <or>
		<and>
			<property>systems/electrical/outputs/cws-power</property>
			<property>/systems/fuel/fwd-fuel-low</property>
		</and>
		<property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>aft-fuel-low</object-name>
    <condition>
      <or>
        <and>
			<property>systems/electrical/outputs/cws-power</property>
			<property>/systems/fuel/aft-fuel-low</property>
		</and>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <!--animation>
    <type>select</type>
    <object-name>low-aux-fuel</object-name>
    <condition>
      <or>
        <property>/systems/fuel/aux-fuel-low</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation-->

  <animation>
    <type>select</type>
    <object-name>fuel-temp-low</object-name>
    <condition>
      <or>
        <property>/systems/fuel/temp-heat-low</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>1-eng-anti-ice-on</object-name>
    <condition>
      <or>
        <property>/systems/fuel/temp-fwd-heat-on</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>2-eng-anti-ice-on</object-name>
    <condition>
      <or>
        <property>/systems/fuel/temp-aft-heat-on</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>1-gen</object-name>
    <condition>
      <or>
        <property>/systems/electrical/outputs/cws-gen-1</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>2-gen</object-name>
    <condition>
      <or>
        <property>/systems/electrical/outputs/cws-gen-2</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>1-rect</object-name>
    <condition>
      <or>
        <property>/systems/electrical/outputs/cws-rect-1</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>2-rect</object-name>
    <condition>
      <or>
        <property>/systems/electrical/outputs/cws-rect-2</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>app-on</object-name>
    <condition>
      <or>
		<and>
			<property>/controls/engines/engine[2]/running</property>
			<property>/systems/electrical/outputs/cws-app-on</property>
		</and>
		<property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>app-hyd-press-low</object-name>
    <condition>
      <or>
		<and>
			<not>
				<property>/controls/engines/engine[2]/running</property>
			</not>
			<property>/systems/electrical/outputs/cws-app-on</property>
		</and>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>afcs-off</object-name>
    <condition>
      <or>
		<and>
			<property>systems/electrical/outputs/cws-power</property>
			<not>
				<and>
					<property>/controls/switches/afcs-servo</property>
					<property>/controls/switches/afcs</property>
				</and>
			</not>
		</and>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>afcs-servo-press</object-name>
    <condition>
      <and>
        <property>/systems/electrical/outputs/cws-power</property>
        <or>
			<not>
				<property>/controls/switches/afcs-servo</property>
			</not>
			<less-than>
				<property>/engines/engine-rpm</property>
				<value>0.08</value>
			</less-than>
          <property>/systems/electrical/outputs/cws-test-power</property>
        </or>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>1-fuel-press</object-name>
    <condition>
      <and>
        <property>/systems/electrical/outputs/cws-power</property>
        <or>
			<and>
				<not>
					<property>/controls/switches/fuelpump1eng1</property>
				</not>
				<not>
					<property>/controls/switches/fuelpump2eng1</property>
				</not>
			</and>
			<property>/systems/electrical/outputs/cws-test-power</property>
        </or>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>2-fuel-press</object-name>
    <condition>
      <and>
        <property>/systems/electrical/outputs/cws-power</property>
        <or>
			<and>
				<not>
					<property>/controls/switches/fuelpump1eng2</property>
				</not>
				<not>
					<property>/controls/switches/fuelpump2eng2</property>
				</not>
			</and>
			<property>/systems/electrical/outputs/cws-test-power</property>
        </or>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>aux-fuel-press</object-name>
    <condition>
      <and>
        <property>/systems/electrical/outputs/cws-power</property>
        <or>
			<and>
				<less-than>
					<property>/consumables/fuel/aux/level-lbs</property>
					<value>23</value>
				</less-than>
				<or>
					<property>/controls/fuel/afpno1</property>
					<property>/controls/fuel/afpno2</property>
				</or>
			</and>
			<and>
				<not>
					<property>/controls/fuel/afpno1</property>
				</not>
				<not>
					<property>/controls/fuel/afpno2</property>
				</not>
			</and>
			<property>/systems/electrical/outputs/cws-test-power</property>
        </or>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>trans-oil-press</object-name>
    <object-name>1-eng-oil-press</object-name>
    <object-name>inter-trans-oil-press</object-name>
    <object-name>2-eng-oil-press</object-name>
    <object-name>1st-stage-servo</object-name>
    <object-name>2nd-stage-servo</object-name>
    <object-name>1st-stg-tl-rotor-servo</object-name>
    <object-name>1st-stage-servo-press</object-name>
    <object-name>2nd-stage-servo-press</object-name>
    <condition>
      <and>
        <property>/systems/electrical/outputs/cws-power</property>
        <or>
          <less-than>
            <property>/engines/engine-rpm</property>
            <value>0.08</value>
          </less-than>
          <property>/systems/electrical/outputs/cws-test-power</property>
        </or>
      </and>
    </condition>
  </animation>

</PropertyList>
