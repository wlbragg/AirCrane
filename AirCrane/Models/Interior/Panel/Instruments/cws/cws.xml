<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>cws.ac</path>

  <effect>
    <inherits-from>Aircraft/AirCrane/Models/Effects/Interior/cockpit-interior</inherits-from>
    <object-name>base</object-name>
    <object-name>back</object-name>
    <object-name>afcs-off</object-name>
    <object-name>chip-main-trans</object-name>
    <object-name>1-eng-chip</object-name>
    <object-name>trans-oil-press</object-name>
    <object-name>chip-inter-trans</object-name>
    <object-name>2-eng-chip</object-name>
    <object-name>1-eng-t5</object-name>
    <object-name>trans-oil-hot</object-name>
    <object-name>chip-tail-trans</object-name>
    <object-name>2-eng-t5</object-name>
    <object-name>1-eng-oil-press</object-name>
    <object-name>inter-trans-oil-press</object-name>
    <object-name>rotor-brake-press</object-name>
    <object-name>2-eng-oil-press</object-name>
    <object-name>1st-stage-servo</object-name>
    <object-name>2nd-stage-servo</object-name>
    <object-name>1st-stg-tl-rotor-servo</object-name>
    <object-name>afcs-servo-press</object-name>
    <object-name>1-eng-fuel-bypass</object-name>
    <object-name>1-gen</object-name>
    <object-name>2-gen</object-name>
    <object-name>2-eng-fuel-bypass</object-name>
    <object-name>1-eng-anti-ice</object-name>
    <object-name>1-rect</object-name>
    <object-name>2-rect</object-name>
    <object-name>2-eng-anti-ice</object-name>
    <object-name>1-fuel-press</object-name>
    <object-name>fwd-fuel-low</object-name>
    <object-name>aft-fuel-low</object-name>
    <object-name>2-fuel-press</object-name>
    <object-name>aux-fuel-press</object-name>
    <object-name>left-pilot-pitot-heat</object-name>
    <object-name>right-pilot-pitot-heat</object-name>
    <object-name>left-pilot-turn-slip</object-name>
    <object-name>hoist-oil-hot</object-name>
    <object-name>right-pilot-turn-slip</object-name>
    <object-name>1st-stage-servo-press</object-name>
    <object-name>oil-cooler</object-name>
    <object-name>hoist-overspeed</object-name>
    <object-name>2nd-stage-servo-press</object-name>
    <object-name>1-eng-starter-on</object-name>
    <object-name>ext-power-connected</object-name>
    <object-name>parking-brake-on</object-name>
    <object-name>2-eng-starter-on</object-name>
    <object-name>1-eng-anti-ice-on</object-name>
    <object-name>rotor-brake-on</object-name>
    <object-name>2-eng-anti-ice-on</object-name>
    <object-name>fuel-temp-low</object-name>
    <object-name>app-on</object-name>
    <object-name>rear-control-engaged</object-name>
    <object-name>hoist-shear-armed</object-name>
  </effect>

  <effect>
    <inherits-from>Aircraft/AirCrane/Models/Effects/Interior/interior-glass-reflection-panel-front</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <!-- CWS bright -->
  <animation>
    <type>material</type>
    <object-name>1-eng-anti-ice</object-name>
    <object-name>1-eng-anti-ice-on</object-name>
    <object-name>1-eng-chip</object-name>
    <object-name>1-eng-fuel-bypass</object-name>
    <object-name>1-eng-oil-press</object-name>
    <object-name>1-eng-starter-on</object-name>
    <object-name>1-eng-t5</object-name>
    <object-name>1-fuel-press</object-name>
    <object-name>1-gen</object-name>
    <object-name>1-rect</object-name>
    <object-name>1st-stage-servo</object-name>
    <object-name>1st-stage-servo-press</object-name>
    <object-name>1st-stg-tl-rotor-servo</object-name>
    <object-name>2-eng-anti-ice</object-name>
    <object-name>2-eng-anti-ice-on</object-name>
    <object-name>2-eng-chip</object-name>
    <object-name>2-eng-fuel-bypass</object-name>
    <object-name>2-eng-oil-press</object-name>
    <object-name>2-eng-starter-on</object-name>
    <object-name>2-eng-t5</object-name>
    <object-name>2-fuel-press</object-name>
    <object-name>2-gen</object-name>
    <object-name>2-rect</object-name>
    <object-name>2nd-stage-servo</object-name>
    <object-name>2nd-stage-servo-press</object-name>
    <object-name>afcs-off</object-name>
    <object-name>afcs-servo-press</object-name>
    <object-name>aft-fuel-low</object-name>
    <object-name>app-on</object-name>
    <object-name>aux-fuel-press</object-name>
    <object-name>chip-inter-trans</object-name>
    <object-name>chip-main-trans</object-name>
    <object-name>chip-tail-trans</object-name>
    <object-name>ext-power-connected</object-name>
    <object-name>fuel-temp-low</object-name>
    <object-name>fwd-fuel-low</object-name>
    <object-name>hoist-oil-hot</object-name>
    <object-name>hoist-overspeed</object-name>
    <object-name>hoist-shear-armed</object-name>
    <object-name>inter-trans-oil-press</object-name>
    <object-name>left-pilot-pitot-heat</object-name>
    <object-name>left-pilot-turn-slip</object-name>
    <object-name>oil-cooler</object-name>
    <object-name>parking-brake-on</object-name>
    <object-name>rear-control-engaged</object-name>
    <object-name>right-pilot-pitot-heat</object-name>
    <object-name>right-pilot-turn-slip</object-name>
    <object-name>rotor-brake-on</object-name>
    <object-name>rotor-brake-press</object-name>
    <object-name>trans-oil-hot</object-name>
    <object-name>trans-oil-press</object-name>
    <emission>
      <factor-prop>/sim/model/aircrane/lighting/cws-bright</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>1-eng-chip</object-name>
    <object-name>1-eng-starter-on</object-name>
    <object-name>1-eng-t5</object-name>
    <object-name>2-eng-chip</object-name>
    <object-name>2-eng-starter-on</object-name>
    <object-name>2-eng-t5</object-name>
    <object-name>afcs-off</object-name>
    <object-name>aft-fuel-low</object-name>
    <object-name>aux-fuel-press</object-name>
    <object-name>1-eng-fuel-bypass</object-name>
    <object-name>2-eng-fuel-bypass</object-name>
    <object-name>chip-inter-trans</object-name>
    <object-name>chip-main-trans</object-name>
    <object-name>chip-tail-trans</object-name>
    <object-name>ext-power-connected</object-name>
    <object-name>fwd-fuel-low</object-name>
    <object-name>hoist-oil-hot</object-name>
    <object-name>hoist-overspeed</object-name>
    <object-name>hoist-shear-armed</object-name>
    <object-name>left-pilot-pitot-heat</object-name>
    <object-name>left-pilot-turn-slip</object-name>
    <object-name>oil-cooler</object-name>
    <object-name>parking-brake-on</object-name>
    <object-name>rear-control-engaged</object-name>
    <object-name>right-pilot-pitot-heat</object-name>
    <object-name>right-pilot-turn-slip</object-name>
    <object-name>rotor-brake-press</object-name>
    <object-name>trans-oil-hot</object-name>
    <condition>
      <property>/systems/electrical/outputs/cws-test-power</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>1-eng-anti-ice</object-name>
    <condition>
      <or>
        <property>/systems/fuel/temp-fwd-heat-low</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>2-eng-anti-ice</object-name>
    <condition>
      <or>
        <property>/systems/fuel/temp-aft-heat-low</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>fuel-temp-low</object-name>
    <condition>
      <or>
        <property>/systems/fuel/temp-heat-low</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>1-eng-anti-ice-on</object-name>
    <condition>
      <or>
        <property>/systems/fuel/temp-fwd-heat-on</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>2-eng-anti-ice-on</object-name>
    <condition>
      <or>
        <property>/systems/fuel/temp-aft-heat-on</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>1-gen</object-name>
    <condition>
      <or>
        <property>/systems/electrical/outputs/cws-gen-1</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>2-gen</object-name>
    <condition>
      <or>
        <property>/systems/electrical/outputs/cws-gen-2</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>1-rect</object-name>
    <condition>
      <or>
        <property>/systems/electrical/outputs/cws-rect-1</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>2-rect</object-name>
    <condition>
      <or>
        <property>/systems/electrical/outputs/cws-rect-2</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>app-on</object-name>
    <condition>
      <or>
        <property>/systems/electrical/outputs/cws-app-on</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>rotor-brake-on</object-name>
    <condition>
      <or>
        <property>/systems/electrical/outputs/cws-rotor-brake-on</property>
        <property>/systems/electrical/outputs/cws-test-power</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>trans-oil-press</object-name>
    <object-name>1-eng-oil-press</object-name>
    <object-name>inter-trans-oil-press</object-name>
    <object-name>2-eng-oil-press</object-name>
    <object-name>1st-stage-servo</object-name>
    <object-name>2nd-stage-servo</object-name>
    <object-name>1st-stg-tl-rotor-servo</object-name>
    <object-name>afcs-servo-press</object-name>
    <object-name>1-fuel-press</object-name>
    <object-name>2-fuel-press</object-name>
    <object-name>1st-stage-servo-press</object-name>
    <object-name>2nd-stage-servo-press</object-name>
    <condition>
      <and>
        <property>/systems/electrical/outputs/cws-power</property>
        <or>
          <less-than>
            <property>/sim/model/aircrane/engine</property>
            <value>0.08</value>
          </less-than>
          <property>/systems/electrical/outputs/cws-test-power</property>
        </or>
      </and>
    </condition>
  </animation>

</PropertyList>
