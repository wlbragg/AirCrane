<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>compass.ac</path>

  <effect>
      <inherits-from>Models/Effects/interior/cockpit-interior-shadows</inherits-from>
      <object-name>fond</object-name>
      <object-name>lubber</object-name>

      <object-name>face</object-name>
  </effect>
  <!--effect>
      <inherits-from>Models/Effects/interior/cockpit-flashlight</inherits-from>
      <object-name>face</object-name>
  </effect-->
  <effect>
      <inherits-from>Models/Effects/interior/interior-glass-reflection-panel-front</inherits-from>
      <object-name>vitre</object-name>
  </effect>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>lubber</object-name>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>lubber</object-name>
    <emission>
      <red>   0.04 </red>
      <green> 0.05 </green>
      <blue>  0.04 </blue>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>face</object-name>
    <property>instrumentation/magnetic-compass/indicated-heading-deg</property>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
