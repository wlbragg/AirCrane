<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>adi.ac</path>

  <effect>
      <inherits-from>Models/Effects/interior/cockpit-interior-shadows</inherits-from>
      <object-name>InkyDepths</object-name>
      <object-name>Face</object-name>
      <object-name>W</object-name>
      <object-name>Housing</object-name>
      <object-name>fasteners</object-name>

      <object-name>TurnIndicator</object-name>
      <object-name>PitchKnob</object-name>
      <object-name>RollKnob</object-name>
      <object-name>ATTFlag</object-name>
  </effect>
  <!--effect>
      <inherits-from>Models/Effects/interior/cockpit-flashlight</inherits-from>
      <object-name>TurnIndicator</object-name>
      <object-name>PitchKnob</object-name>
      <object-name>RollKnob</object-name>
      <object-name>ATTFlag</object-name>
  </effect-->
  <effect>
      <inherits-from>Models/Effects/interior/interior-glass-reflection-panel-front</inherits-from>
      <object-name>glass</object-name>
  </effect>
  
  <instrumentation>
    <attitude-indicator>
      <roll-offset-deg type="double">0</roll-offset-deg>
    </attitude-indicator>
  </instrumentation>
  
  <animation>
    <name>Roll</name>
    <object-name>Ball</object-name>
    <object-name>RollIndicator</object-name>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>Roll</object-name>
    <property>/orientation/roll-deg</property>
    <center>
      <x-m>-9.3894</x-m>
      <y-m> 0.602481</y-m>
      <z-m>-1.45662</z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>texmultiple</type>
    <object-name>Ball</object-name>
    <transform>
      <subtype>textranslate</subtype>
      <property>/orientation/pitch-deg</property>
      <factor>.0037</factor>
      <axis>
        <x> 0 </x>
        <y> 1 </y>
        <z> 0 </z>
      </axis>
    </transform>
    <transform>
      <subtype>textranslate</subtype>
      <property>instrumentation/attitude-indicator/horizon-offset-deg</property>
      <factor>.0074</factor>
      <axis>
        <x> 0 </x>
        <y> 1 </y>
        <z> 0 </z>
      </axis>
    </transform>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>RollKnob</object-name>
    <property>instrumentation/attitude-indicator/roll-offset-deg</property>
    <factor>-6</factor>
    <axis>
        <x1-m>-9.3572</x1-m>
        <y1-m> 0.65374</y1-m> 
        <z1-m>-1.50615</z1-m>
        <x2-m>-9.37224</x2-m>
        <y2-m> 0.653797</y2-m>
        <z2-m>-1.50771</z2-m>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>PitchKnob</object-name>
    <property>instrumentation/attitude-indicator/horizon-offset-deg</property>
    <factor>-6</factor>
    <axis>
        <x1-m>-9.36919</x1-m>
        <y1-m> 0.656198</y1-m> 
        <z1-m>-1.40237</z1-m>
        <x2-m>-9.38424</x2-m>
        <y2-m> 0.656309</y2-m>
        <z2-m>-1.40392</z2-m>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>ATTFlag</object-name>
    <property>sim/model/jrb-usn/ATTFlag-pos-norm</property>
    <offset-deg>-45</offset-deg>
    <factor>45</factor>
    <center>
      <x-m>-9.3894</x-m>
      <y-m> 0.542676 </y-m>
      <z-m>-1.46671 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>translate</type>
    <object-name>TurnIndicator</object-name>
    <property>instrumentation/turn-indicator/indicated-turn-rate</property>
    <factor> 0.0052 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>RollKnob</object-name>
    <action>
      <button>4</button>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/attitude-indicator/roll-offset-deg</property>
        <step>1.5</step>
        <min>-15</min>
        <max>15</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <action>
      <button>3</button>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/attitude-indicator/roll-offset-deg</property>
        <step>-1.5</step>
        <min>-15</min>
        <max>15</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>PitchKnob</object-name>
    <action>
      <button>4</button>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/attitude-indicator/horizon-offset-deg</property>
        <step>0.75</step>
        <min>-15</min>
        <max>15</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <action>
      <button>3</button>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/attitude-indicator/horizon-offset-deg</property>
        <step>-0.75</step>
        <min>-15</min>
        <max>15</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>
  
</PropertyList>
