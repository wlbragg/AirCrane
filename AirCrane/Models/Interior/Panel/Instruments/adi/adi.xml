<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>adi.ac</path>

  <effect>
    <inherits-from>Aircraft/AirCrane/Models/Effects/Interior/lm-interior-adi</inherits-from>
    <object-name>fond</object-name>
    <object-name>RollKnob</object-name>
    <object-name>PitchKnob</object-name>
    <object-name>InkyDepths</object-name>
    <object-name>W</object-name>
    <object-name>Ball</object-name>
    <object-name>Face</object-name>
    <object-name>ATTFlag</object-name>
    <object-name>RollIndicator</object-name>
    <object-name>TurnIndicator</object-name>
  </effect>
 
  <effect>
    <inherits-from>Aircraft/AirCrane/Models/Effects/Interior/interior-glass-reflection-panel-front</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>W</object-name>
    <object-name>Ball</object-name>
    <object-name>Face</object-name>
    <object-name>ATTFlag</object-name>
    <object-name>RollIndicator</object-name>
    <object-name>TurnIndicator</object-name>
    <condition>
      <property>controls/electric/battery-bus-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <instrumentation>
    <attitude-indicator>
      <roll-offset-deg type="double">0</roll-offset-deg>
    </attitude-indicator>
  </instrumentation>

  <animation>
    <name>Roll</name>
    <object-name>Ball</object-name>
    <object-name>RollIndicator</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Roll</object-name>
    <property>/orientation/roll-deg</property>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>texmultiple</type>
    <object-name>Ball</object-name>
    <transform>
      <subtype>textranslate</subtype>
      <property>/orientation/pitch-deg</property>
      <factor>.0037</factor>
      <axis>
        <x> 0 </x>
        <y> 1 </y>
        <z> 0 </z>
      </axis>
    </transform>
    <transform>
      <subtype>textranslate</subtype>
      <property>instrumentation/attitude-indicator/horizon-offset-deg</property>
      <factor>.0074</factor>
      <axis>
        <x> 0 </x>
        <y> 1 </y>
        <z> 0 </z>
      </axis>
    </transform>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ATTFlag</object-name>
    <property>sim/model/jrb-usn/ATTFlag-pos-norm</property>
    <offset-deg>-40</offset-deg>
    <factor>40</factor>
    <center>
      <x-m>  0.00700 </x-m>
      <y-m> -0.05919 </y-m>
      <z-m> -0.00916 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>TurnIndicator</object-name>
    <property>instrumentation/turn-indicator/indicated-turn-rate</property>
    <factor> 0.0052 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>RollKnob</object-name>
    <action>
      <button>4</button>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/attitude-indicator/roll-offset-deg</property>
        <step>1.5</step>
        <min>-15</min>
        <max>15</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <action>
      <button>3</button>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/attitude-indicator/roll-offset-deg</property>
        <step>-1.5</step>
        <min>-15</min>
        <max>15</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RollKnob</object-name>
    <property>instrumentation/attitude-indicator/roll-offset-deg</property>
    <factor>-6</factor>
    <center>
      <x-m>  0.01794 </x-m>
      <y-m>  0.05193 </y-m>
      <z-m> -0.05238 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>PitchKnob</object-name>
    <action>
      <button>4</button>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/attitude-indicator/horizon-offset-deg</property>
        <step>0.75</step>
        <min>-15</min>
        <max>15</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <action>
      <button>3</button>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/attitude-indicator/horizon-offset-deg</property>
        <step>-0.75</step>
        <min>-15</min>
        <max>15</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PitchKnob</object-name>
    <property>instrumentation/attitude-indicator/horizon-offset-deg</property>
    <factor>-6</factor>
    <center>
      <x-m>  0.01775 </x-m>
      <y-m>  0.05439 </y-m>
      <z-m>  0.05196 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
