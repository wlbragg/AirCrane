<PropertyList>

  <path>tankqty.ac</path>
  <texture-path>../../../../../Models</texture-path>

  <!-- ALS Interior Shadows -->
  <effect>
    <inherits-from>Models/Effects/interior/cockpit-interior-shadows</inherits-from>
    <object-name>sysready</object-name>
    <object-name>sysready.001</object-name>
    <object-name>sysreadybase</object-name>
    <object-name>tankpumpot</object-name>
    <object-name>tankpumpot.001</object-name>
    <object-name>tankpumpotbase</object-name>
    <object-name>tank-volume-glass-bg</object-name>
    <object-name>tank-weight-glass-bg</object-name>
    <object-name>plate</object-name>
    <object-name>case</object-name>
  </effect>

  <effect>
      <inherits-from>Models/Effects/interior/interior-glass-reflection-panel-front</inherits-from>
      <object-name>glass</object-name>
  </effect>

  <animation>
    <type>select</type>
    <object-name>sysready</object-name>
    <condition>
      <greater-than>
        <property>sim/weight[3]/weight-lb</property>
        <value>0</value>
      </greater-than>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>sysready.001</object-name>
    <condition>
      <less-than>
        <property>sim/weight[3]/weight-lb</property>
        <value>1</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>tankpumpot</object-name>
    <condition>
        <property>sim/model/aircrane/tank/pump/overtemp</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>tankpumpot.001</object-name>
    <condition>
        <not>
            <property>sim/model/aircrane/tank/pump/overtemp</property>
        </not>
    </condition>
  </animation>

