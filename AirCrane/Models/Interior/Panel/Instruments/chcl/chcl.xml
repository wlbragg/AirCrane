<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>chcl.ac</path>

  <effect>
    <inherits-from>Aircraft/AirCrane/Models/Effects/Interior/lm-interior-chcl</inherits-from>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>needle-h</object-name>
  </effect>

  <effect>
    <inherits-from>Aircraft/AirCrane/Models/Effects/Interior/interior-glass-reflection-panel-front</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>needle-h</object-name>
    <condition>
      <property>systems/electrical/outputs/cabin-power</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>/sim/cargo/rope/length</property>
    <interpolation>
      <entry><ind> -99 </ind><dep>    1.0 </dep></entry>
      <entry><ind>   0 </ind><dep>    0.0 </dep></entry>
      <entry><ind>  20 </ind><dep>  -23.5 </dep></entry>
      <entry><ind>  40 </ind><dep>  -46.5 </dep></entry>
      <entry><ind>  60 </ind><dep>  -69.0 </dep></entry>
      <entry><ind>  80 </ind><dep>  -93.0 </dep></entry>
      <entry><ind> 100 </ind><dep> -118.0 </dep></entry>
      <entry><ind> 999 </ind><dep> -119.0 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.00797 </x-m>
      <y-m> -0.01412 </y-m>
      <z-m>  0.00250 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle-h</object-name>
    <property>/sim/cargo/rope/length</property>
    <interpolation>
      <entry><ind> -999 </ind><dep>    1.0 </dep></entry>
      <entry><ind>    0 </ind><dep>    0.0 </dep></entry>
      <entry><ind>  100 </ind><dep>  -34.5 </dep></entry>
      <entry><ind>  200 </ind><dep>  -70.5 </dep></entry>
      <entry><ind>  300 </ind><dep> -106.0 </dep></entry>
      <entry><ind>  400 </ind><dep> -144.0 </dep></entry>
      <entry><ind>  500 </ind><dep> -181.0 </dep></entry>
      <entry><ind>  600 </ind><dep> -218.0 </dep></entry>
      <entry><ind>  700 </ind><dep> -255.0 </dep></entry>
      <entry><ind>  800 </ind><dep> -288.0 </dep></entry>
      <entry><ind>  900 </ind><dep> -325.0 </dep></entry>
      <entry><ind> 1000 </ind><dep> -355.0 </dep></entry>
      <entry><ind> 9999 </ind><dep> -356.0 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.00797 </x-m>
      <y-m> -0.01412 </y-m>
      <z-m>  0.00250 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
