<?xml version="1.0"?>

<PropertyList>

 <path>iat.ac</path>

     <effect>
        <inherits-from>Models/Effects/interior/cockpit-interior-shadows</inherits-from>
        <object-name>face</object-name>
        <object-name>marker</object-name>
        <object-name>bezelinside</object-name>
        <object-name>bezeloutside</object-name>
        <object-name>bezel</object-name>
        <object-name>screws</object-name>
    </effect>

    <effect>
        <inherits-from>Models/Effects/interior/j3cub-flashlight</inherits-from>
        <object-name>needle</object-name>
        <object-name>toggle</object-name>
    </effect>

    <effect>
        <inherits-from>Models/Effects/interior/interior-glass-reflection-panel-front</inherits-from>
        <object-name>glass</object-name>
    </effect>

    <animation>
        <type>rotate</type>
        <object-name>needle</object-name>
        <property>fdm/jsbsim/heat/air-temperature</property>
        <factor>1</factor>
        <interpolation>
            <entry>
                <ind>-60</ind>
                <dep>127</dep>
            </entry>
            <entry>
                <ind>-50</ind>
                <dep>104</dep>
            </entry>
            <entry>
                <ind>-40</ind>
                <dep>82.5</dep>
            </entry>
            <entry>
                <ind>-30</ind>
                <dep>61.5</dep>
            </entry>
            <entry>
                <ind>-20</ind>
                <dep>41</dep>
            </entry>
            <entry>
                <ind>-10</ind>
                <dep>20</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>10</ind>
                <dep>-21</dep>
            </entry>
            <entry>
                <ind>20</ind>
                <dep>-43</dep>
            </entry>
            <entry>
                <ind>30</ind>
                <dep>-64</dep>
            </entry>
            <entry>
                <ind>40</ind>
                <dep>-85</dep>
            </entry>
            <entry>
                <ind>50</ind>
                <dep>-106</dep>
            </entry>
            <entry>
                <ind>60</ind>
                <dep>-127</dep>
            </entry>
        </interpolation>
        <axis>
            <x1-m>-0.1619</x1-m>
            <y1-m> 0.0000794</y1-m>
            <z1-m>-0.5098</z1-m>
            <x2-m>-0.1617</x2-m>
            <y2-m> 0.0001</y2-m>
            <z2-m>-0.5098</z2-m>
        </axis>
    </animation>

    <animation>
        <type>material</type>
        <object-name>mode</object-name>
        <emission>
            <red>  0.05</red>
            <green>1</green>
            <blue> 0.05</blue>
            <!--factor-prop alias="/params/light/power"/-->
            <factor>1</factor>
        </emission>
    </animation>
   <animation>
        <type>material</type>
        <object-name>face</object-name>
        <object-name>needle</object-name>
        <emission>
            <red>  0.05</red>
            <green>0.05</green>
            <blue> 0.05</blue>
            <!--factor-prop alias="/params/light/power"/-->
            <factor>1</factor>
        </emission>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>toggle</object-name>
        <property>controls/thermometer/temp-mode</property>
        <factor>45</factor>
        <offset-deg>-20</offset-deg>
        <center>
            <x-m>-0.17046</x-m>
            <y-m> 0.03401</y-m>
            <z-m>-0.50919</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/thermometer/temp-mode</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>nasal</command>
                <script>j3cub.click("light")</script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Temperature Mode</tooltip-id>
                <label>Position: %s</label>
                <property>controls/thermometer/temp-mode</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['Indoor', 'Outdoor'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>mode</object-name>
        <property>controls/thermometer/temp-mode/</property>
        <bias>0.0001</bias>
        <factor>.062</factor>
        <step>1</step>
        <axis>
            <x>0</x>
            <y>-1</y>
        </axis>
    </animation>
</PropertyList>


