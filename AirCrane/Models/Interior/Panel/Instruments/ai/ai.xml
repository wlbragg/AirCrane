<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>ai.ac</path>

  <effect>
    <inherits-from>Aircraft/AirCrane/Models/Effects/Interior/lm-interior-ai</inherits-from>
	<object-name>fond</object-name>
    <object-name>bouton</object-name>
    <object-name>face</object-name>
    <object-name>AttitudeBall</object-name>
    <object-name>barre</object-name>
    <object-name>barre1</object-name>
    <object-name>barre2</object-name>
    <object-name>gs-scale</object-name>
    <object-name>ring-slip</object-name>
    <object-name>course-flag</object-name>
    <object-name>slip-ball</object-name>
    <object-name>nav-pitch-steering-ba</object-name>
    <object-name>nav-yaw-steering-bar</object-name>
    <object-name>bank-index</object-name>
    <object-name>ils-flags</object-name>
  </effect>

  <effect>
    <inherits-from>Aircraft/AirCrane/Models/Effects/Interior/interior-glass-reflection-panel-front</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>AttitudeBall</object-name>
    <object-name>barre</object-name>
    <object-name>barre1</object-name>
    <object-name>barre2</object-name>
    <object-name>gs-scale</object-name>
    <object-name>ring-slip</object-name>
    <object-name>course-flag</object-name>
    <object-name>slip-ball</object-name>
    <object-name>nav-pitch-steering-ba</object-name>
    <object-name>nav-yaw-steering-bar</object-name>
    <object-name>bank-index</object-name>
    <object-name>ils-flags</object-name>
    <condition>
      <property>controls/electric/battery-bus-switch</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/luminosite-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.40 </green>
      <blue>  0.30 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AttitudeBall</object-name>
    <property>orientation/roll-deg</property>
    <factor>1</factor>
    <center>
      <x-m> -0.03484 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.00000 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AttitudeBall</object-name>
    <property>orientation/pitch-deg</property>
    <factor>1</factor>
    <center>
      <x-m> -0.03484 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.00000 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>slip-ball</object-name>
    <property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
    <factor>8</factor>
    <min-deg> -13 </min-deg>
    <max-deg>  13 </max-deg>
    <center>
      <x-m>  0.00 </x-m>
      <y-m>  0.00 </y-m>
      <z-m>  0.02 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>bank-index</object-name>
    <property>orientation/roll-deg</property>
    <min-deg> -120 </min-deg>
    <max-deg>  120 </max-deg>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
