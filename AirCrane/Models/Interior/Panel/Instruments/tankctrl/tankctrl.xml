  <!-- Hyd Snorkel "Toggle" -->
  <animation>
    <type>pick</type>
    <object-name>toggle-hyd-snorkel</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/firetank/deployflexhose</property>
      </binding>
      <binding>
        <command>nasal</command>
        <script>
          if (getprop("sim/model/firetank/arm"))
            {
              if (getprop("/sim/model/firetank/flexhose/hosehitsground"))
                screen.log.write("Damage will occur if Snorkel is deployed this low!");
              else
                if (getprop("sim/model/firetank/deployflexhose") == 1 and getprop("sim/model/firetank/deployflexhose/position-norm") == 1)
                  doors.flexhose.toggle();
                else
                  if (getprop("sim/model/firetank/deployflexhose") == 0 and getprop("sim/model/firetank/deployflexhose/position-norm") == 0)
                    screen.log.write("Hose already deployed!");
            }
          else
            screen.log.write("System must be armed first!");
        </script>
      </binding>
      <binding>
        <command>nasal</command>
        <script>aircrane.click("avionics")</script>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>toggle-hyd-snorkel</tooltip-id>
        <label>Toggle: %s</label>
        <property>sim/model/firetank/deployflexhose</property>
        <mapping>nasal</mapping>
        <script>
          var modes = ['Release', 'Released'];
          return modes[arg[0]];
        </script>
      </binding>
    </hovered>
  </animation>
  <animation>
