  <!-- Quantity "Knob" -->
  <animation>
    <type>knob</type>
    <object-name>knob-quantity</object-name>
    <property>sim/model/firetank/quantity</property>
    <factor>45</factor>
    <offset-deg>0</offset-deg>
    <axis>
            <x1-m>-8.87255</x1-m>
            <y1-m>-0.26219</y1-m>
            <z1-m>-1.7919</z1-m>
            <x2-m>-8.87411</x2-m>
            <y2-m>-0.26214</y2-m>
            <z2-m>-1.80244</z2-m>
        </axis>
    <action>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
          <property>sim/model/firetank/quantity</property>
        <factor>1</factor>
        <min>0</min>
        <max>4</max>
        <wrap>0</wrap>
      </binding>
      <binding>
        <command>nasal</command>
        <script>aircrane.click("avionics")</script>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>knob-quantity</tooltip-id>
        <label>Quantity: %s</label>
        <property>sim/model/firetank/quantity</property>
        <mapping>nasal</mapping>
        <script>
          var modes = ['Safe', '25%', '50%', '75%', '100%']; 
          return modes[arg[0]];
        </script>
      </binding>
    </hovered>
  </animation>

