<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>panelpedaladjust.ac</path>

  <!-- ALS Interior Shadows -->
  <effect>
    <inherits-from>Models/Effects/interior/cockpit-interior-shadows</inherits-from>
    <object-name>basepedaladjust</object-name>
    <object-name>pedaladjustleft</object-name>
    <object-name>pedaladjustright</object-name>
    <object-name>panelpedaladjust</object-name>
  </effect>

    <!-- Left Pedal Adjust "Switch" -->
    <animation>
      <type>knob</type>
      <object-name>pedaladjustleft</object-name>
      <property>controls/pedaladjustleft</property>
      <factor>30</factor>
      <axis>
        <x>0.0</x>
        <y>1.0</y>
        <z>0.0</z>
      </axis>
      <center>
        <x-m>-8.79121</x-m>
        <y-m> 0.060325</y-m>
        <z-m>-1.81779</z-m>
      </center>
      <action>
        <repeatable>false</repeatable>
        <binding>
            <command>property-adjust</command>
            <property>controls/pedaladjustleft</property>
            <factor>1</factor>
            <min>-1</min>
            <max> 1</max>
            <wrap>0</wrap>
        </binding>
        <binding>
            <command>nasal</command>
            <script>
                #var brake = getprop("systems/electrical/outputs/rotorbrake");
                #var pressure = getprop("controls/rotorbrake/rotorbrake");
                #if(brake == -1) {
                #    setprop("controls/rotor/brake", pressure * .1);
                #}
                #if(brake == 1) {
                #    setprop("controls/rotorbrake/rotorbrake", 0);
                #}
                aircrane.click("avionics");
            </script>
        </binding>
      </action>
      <hovered>
        <binding>
            <command>set-tooltip</command>
            <tooltip-id>pedaladjustleft</tooltip-id>
            <label>Adjust Left Pedal: %s</label>
            <property>controls/pedaladjustleft</property>
        </binding>
      </hovered>
    </animation>

    <!-- Right Pedal Adjust "Switch" -->
    <animation>
      <type>knob</type>
      <object-name>pedaladjustright</object-name>
      <property>controls/pedaladjustright</property>
      <factor>30</factor>
      <axis>
        <x>0.0</x>
        <y>1.0</y>
        <z>0.0</z>
      </axis>
      <center>
        <x-m>-8.79121</x-m>
        <y-m> 0.094877</y-m>
        <z-m>-1.81779</z-m>
      </center>
      <action>
        <repeatable>false</repeatable>
        <binding>
            <command>property-adjust</command>
            <property>controls/pedaladjustright</property>
            <factor>1</factor>
            <min>-1</min>
            <max> 1</max>
            <wrap>0</wrap>
        </binding>
        <binding>
            <command>nasal</command>
            <script>
                #var brake = getprop("systems/electrical/outputs/rotorbrake");
                #var pressure = getprop("controls/rotorbrake/rotorbrake");
                #if(brake == -1) {
                #    setprop("controls/rotor/brake", pressure * .1);
                #}
                #if(brake == 1) {
                #    setprop("controls/rotorbrake/rotorbrake", 0);
                #}
                aircrane.click("avionics");
            </script>
        </binding>
      </action>
      <hovered>
        <binding>
            <command>set-tooltip</command>
            <tooltip-id>pedaladjustright</tooltip-id>
            <label>Adjust Right Pedal: %s</label>
            <property>controls/pedaladjustright</property>
        </binding>
      </hovered>
    </animation>

</PropertyList>
