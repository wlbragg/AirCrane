<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <!-- ================================================================== -->
  <!-- Basic Lighting                                                     -->
  <!-- ================================================================== -->
  <model>
    <name>White-light-tail</name>
    <path>Aircraft/AirCrane/Models/light/DEFAULT/WhiteLight.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>White-light-tail</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <!-- ================================================================== -->
  <!-- ALS Lighting                                                       -->
  <!-- ================================================================== -->
  <model>
    <name>nav-light-tail</name>
    <path>Aircraft/AirCrane/Models/light/ALS/WhiteLight.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>nav-light-tail</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

</PropertyList>
