<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <!-- <params>
    IMPORTANT: int properties 14 to 19, both included, are reserved for the immat system. Do not use them! 
    <spray_wake_speed_kt>
    <property>sim/multiplay/generic/float[6]</property>
    </spray_wake_speed_kt>
  </params>-->
  
  <particlesystem>
    <name>ramscoopwake</name>
    <type>normal</type>
    <texture>smoke.png</texture>
    
    <emissive>false</emissive>
    <lighting>false</lighting>
    
    <condition>
      <and>
        <property>sim/model/aircrane/effects/particles/enabled</property>
        <not>
          <property>sim/freeze/clock</property>
        </not>
        <not>
          <property>sim/crashed</property>
        </not>
        <property>sim/model/firetank/deployramscoop/enabled</property>
        <less-than>
          <property>position/altitude-agl-ft</property>
          <value>26.5</value>
        </less-than>
        <greater-than>
          <property>sim/model/firetank/deployramscoop/position-norm</property>
          <value>.25</value>
        </greater-than>
        <greater-than>
          <property>velocities/airspeed-kt</property>
          <value>15</value>
        </greater-than>
        <not>
          <property>gear/gear/ground-is-solid</property>
        </not>
      </and>
    </condition>
    
    <attach>world</attach>
    
    <placer>
      <type>point</type>
    </placer>
    
    <shooter>
      <theta-min-deg>45</theta-min-deg>
      <theta-max-deg>55</theta-max-deg>
      <phi-min-deg>-1</phi-min-deg>
      <phi-max-deg>1</phi-max-deg>
      <speed-mps>
        <value>5</value>
        <spread>3</spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>-15</x-min-deg-sec>
        <y-min-deg-sec> 15</y-min-deg-sec>
        <z-min-deg-sec>-15</z-min-deg-sec>
        <x-max-deg-sec> 15</x-max-deg-sec>
        <y-max-deg-sec>-15</y-max-deg-sec>
        <z-max-deg-sec> 15</z-max-deg-sec>
      </rotation-speed>
    </shooter>
    
    <counter>
      <particles-per-sec>
        <property>velocities/airspeed-kt</property>
        <factor>5</factor>
        <spread>0</spread>
      </particles-per-sec>
    </counter>
    
    <align>billboard</align>
    
    <particle>
      <start>
        <color>
          <red>
            <property>sim/model/aircrane/effects/particles/redcombined</property>
          </red>
          <green>
            <property>sim/model/aircrane/effects/particles/greencombined</property>
          </green>
          <blue>
            <property>sim/model/aircrane/effects/particles/bluecombined</property>
          </blue>
          <alpha><value>0.5</value></alpha>
        </color>
        <size>
          <value>0.1</value>
        </size>
      </start>
      <end>
        <color>
          <red>
            <property>sim/model/aircrane/effects/particles/redcombined</property>
          </red>
          <green>
            <property>sim/model/aircrane/effects/particles/greencombined</property>
          </green>
          <blue>
            <property>sim/model/aircrane/effects/particles/bluecombined</property>
          </blue>
          <alpha><value>0.001</value></alpha>
        </color>
        <size>
          <value>3</value>
        </size>
      </end>
      <life-sec>
        <value>1.75</value>
      </life-sec>
      <mass-kg>25</mass-kg>
      <radius-m>0.2</radius-m>
    </particle>
    
    <program>
      <fluid>water</fluid>
      <gravity>true</gravity>
      <wind>false</wind>
    </program>
    
  </particlesystem>
  
  <!--Translate to ground level  -->
  <animation>
    <type>translate</type>
    <object-name>ramscoopwake</object-name>
    <property>position/altitude-agl-ft</property>
    <factor>-0.3048</factor>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>
  
  <!--Translate to angle  -->
  <animation>
    <type>translate</type>
    <object-name>ramscoopwake</object-name>
    <property>position/altitude-agl-ft</property>
    <factor>.18</factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>
  
</PropertyList>
