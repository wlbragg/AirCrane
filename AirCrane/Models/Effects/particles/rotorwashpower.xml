<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <particlesystem>

    <name>rotorwashpower</name>
    <texture>smoke.png</texture>
    <emissive>false</emissive>
    <lighting>false</lighting>

    <attach>world</attach>

    <align>billboard</align>

    <placer>
      <type>sector</type>
      <radius-min-m>  0.0 </radius-min-m>
      <radius-max-m> 15.0 </radius-max-m>
    </placer>

	<condition>
		<and>
			<property>/sim/model/aircrane/effects/particles/enabled</property>
			<not>
				<property>/sim/freeze/clock</property>
			</not>
			<not>
				<property>/sim/crashed</property>
			</not>
			<less-than>
        <property>position/true-agl-ft</property>
				<value>40</value>
			</less-than>
			<greater-than>
				<property>/rotors/main/rpm</property>
				<value>65</value>
			</greater-than>
		</and>
	</condition>

    <shooter>
      <theta-min-deg> -1.5 </theta-min-deg>
      <theta-max-deg>  1.5 </theta-max-deg>
      <phi-min-deg>   -1.5 </phi-min-deg>
      <phi-max-deg>    0.0 </phi-max-deg>
      <speed-mps>
        <value>  20.0 </value>
        <spread>  0.0 </spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec> 0 </x-min-deg-sec>
        <y-min-deg-sec> 0 </y-min-deg-sec>
        <z-min-deg-sec> 0 </z-min-deg-sec>
        <x-max-deg-sec> 0 </x-max-deg-sec>
        <y-max-deg-sec> 0 </y-max-deg-sec>
        <z-max-deg-sec> 0 </z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <value>  20 </value>
        <spread>  5 </spread>
      </particles-per-sec>
    </counter>

    <particle>
      <start>
        <color>
          <red>
            <property>/sim/model/aircrane/effects/particles/rotorwash/redcombinedstart</property>
          </red>
          <green>
            <property>/sim/model/aircrane/effects/particles/rotorwash/greencombinedstart</property>
          </green>
          <blue>
            <property>/sim/model/aircrane/effects/particles/rotorwash/bluecombinedstart</property>
          </blue>
          <alpha>
            <property>/controls/engines/engine/throttle</property>
            <interpolation>
             <entry>
              <ind>0.0</ind><dep>1.0</dep>
             </entry>
             <entry>
              <ind>0.5</ind><dep>0.5</dep>
             </entry>
             <entry>
              <ind>1.0</ind><dep>0.05</dep>
             </entry>
            </interpolation>
          </alpha>
        </color>
        <size>
          <value>  4 </value>
          <spread> 1 </spread>
        </size>
      </start>

      <end>
        <color>
          <red>
            <property>/sim/model/aircrane/effects/particles/rotorwash/redcombinedend</property>
          </red>
          <green>
            <property>/sim/model/aircrane/effects/particles/rotorwash/greencombinedend</property>
          </green>
          <blue>
            <property>/sim/model/aircrane/effects/particles/rotorwash/bluecombinedend</property>
          </blue>
          <alpha>
            <property>/controls/engines/engine/throttle</property>
            <interpolation>
             <entry>
              <ind>0.0</ind><dep>0.5</dep>
             </entry>
             <entry>
              <ind>0.5</ind><dep>0.25</dep>
             </entry>
             <entry>
              <ind>1.0</ind><dep>0.005</dep>
             </entry>
            </interpolation>
          </alpha>
        </color>
        <size>
          <value>  40 </value>
          <spread> 15 </spread>
        </size>
      </end>

      <life-sec>
        <value> 2 </value>
      </life-sec>

      <mass-kg> 6000 </mass-kg>
      <radius-m>  10 </radius-m>
    </particle>

    <program>
      <fluid>   water </fluid>
      <gravity> true  </gravity>
      <wind>    true  </wind>
    </program>

  </particlesystem>

  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>rotorwashpower</object-name>
    <property>/orientation/pitch-deg</property>
    <factor>-1.0</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- roll -->
  <animation>
    <type>rotate</type>
    <object-name>rotorwashpower</object-name>
    <property>/orientation/roll-deg</property>
    <factor>1.0</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!--Translate to ground level  -->
  <animation>
    <type>translate</type>
    <object-name>rotorwashpower</object-name>
    <property>position/true-agl-ft</property>
    <factor>-0.3048</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

</PropertyList>
