<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <particlesystem>

    <name>rotorwashidle</name>
    <texture>dirt.rgb</texture>
    <emissive>false</emissive>
    <lighting>false</lighting>

    <attach>world</attach>

    <placer>
      <type>point</type>
    </placer>

    <condition>
      <property>/sim/model/aircrane/effects/particles/enabled</property>
      <not>
        <property>/sim/freeze/clock</property>
      </not>
      <not>
        <property>/sim/crashed</property>
      </not>
      <less-than>
        <property>position/true-agl-ft</property>
        <value>35</value>
      </less-than>
      <greater-than>
        <property>rotors/main/rpm</property>
        <value>100</value>
      </greater-than>
    </condition>

    <shooter>
      <theta-min-deg>0</theta-min-deg>
      <theta-max-deg>360</theta-max-deg>
      <phi-min-deg>-0.1</phi-min-deg>
      <phi-max-deg>0.1</phi-max-deg>
      <speed-mps>
        <property>/rotors/main/rpm</property>
        <factor>0.1</factor>
        <spread>2</spread>
      </speed-mps>
      <rotation-speed>
        <x-max-deg-sec>15</x-max-deg-sec>
        <x-min-deg-sec>-15</x-min-deg-sec>
        <y-max-deg-sec>15</y-max-deg-sec>
        <y-min-deg-sec>-15</y-min-deg-sec>
        <z-max-deg-sec>15</z-max-deg-sec>
        <z-min-deg-sec>-15</z-min-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <property>position/true-agl-ft</property>
        <factor>5</factor>
        <offset-m>500</offset-m>
      </particles-per-sec>
    </counter>

    <align>billboard</align>

    <particle>
      <start>
        <color>
          <red>
            <property>/sim/model/aircrane/effects/particles/rotorwash/redcombinedstart</property>
          </red>
          <green>
            <property>/sim/model/aircrane/effects/particles/rotorwash/greencombinedstart</property>
          </green>
          <blue>
            <property>/sim/model/aircrane/effects/particles/rotorwash/bluecombinedstart</property>
          </blue>
          <alpha>
            <property>/controls/engines/engine/throttle</property>
            <interpolation>
             <entry>
              <ind>0.0</ind><dep>0.15</dep>
             </entry>
             <entry>
              <ind>0.5</ind><dep>0.1</dep>
             </entry>
             <entry>
              <ind>1.0</ind><dep>0.04</dep>
             </entry>
            </interpolation>
          </alpha>
        </color>
        <size>
          <value>1.5</value>
          <spread>1</spread>
        </size>
      </start>

      <end>
        <color>
          <red>
            <property>/sim/model/aircrane/effects/particles/rotorwash/redcombinedend</property>
          </red>
          <green>
            <property>/sim/model/aircrane/effects/particles/rotorwash/greencombinedend</property>
          </green>
          <blue>
            <property>/sim/model/aircrane/effects/particles/rotorwash/bluecombinedend</property>
          </blue>
          <alpha>
            <property>/controls/engines/engine/throttle</property>
            <interpolation>
             <entry>
              <ind>0.0</ind><dep>0.15</dep>
             </entry>
             <entry>
              <ind>0.5</ind><dep>0.1</dep>
             </entry>
             <entry>
              <ind>1.0</ind><dep>0.04</dep>
             </entry>
            </interpolation>
          </alpha>
        </color>
        <size>
          <value> 2.5</value>
          <spread>2</spread>
        </size>
      </end>

      <life-sec>
        <value>2</value>
      </life-sec>
      <mass-kg>0.01</mass-kg>
      <radius-m>0.01</radius-m>
    </particle>

    <program>
      <fluid>air</fluid>
      <gravity>false</gravity>
      <wind>true</wind>
    </program>

  </particlesystem>

  <!-- pitch -->
  <animation>
    <type>rotate</type>
    <object-name>rotorwashidle</object-name>
    <property>/orientation/pitch-deg</property>
    <factor>1.0</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

  <!-- roll -->
  <animation>
    <type>rotate</type>
    <object-name>rotorwashidle</object-name>
    <property>/orientation/roll-deg</property>
    <factor>1.0</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!--Translate to ground level  -->
  <animation>
    <type>translate</type>
    <object-name>rotorwashidle</object-name>
    <property>position/true-agl-ft</property>
    <factor>-0.3048</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

</PropertyList>
